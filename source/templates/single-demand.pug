extends layout

block vars
    - title = "Seguimiento Electoral";
    - section = "Denuncia";

block head
    link(rel="stylesheet" href="styles/single-demand.css")

block content
    .wrap
        .single-demand
            .layout-parent
                include ./partials/account

                .layout.layout-middle.is-full
                    .layout-middle__top
                        i.layout-middle__top__icon.icon-zoom
                        h2.layout-middle__top__title Mis denuncias

                    .single-demand__main
                        span.single-demand__status.single-demand__status--approved Aprobado
                        h3.single-demand__title Incubrimiento real
                        .single-demand__organization
                            .single-demand__organization__image
                                img(src="#", alt="")
                            .single-demand__organization__info
                                span.single-demand__organization__name APRA
                                span.single-demand__organization__charge Presidente regional
                                span.single-demand__organization__place Lima, Lima
                        .single-demand__person
                            .single-demand__person__image
                                img(src="#", alt="")
                            .single-demand__person__info
                                span.single-demand__person__charge Presidente regional
                                span.single-demand__person__name Pedro Chávarry
                        .single-demand__text
