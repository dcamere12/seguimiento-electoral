mixin lq-spinner(min, max, value, increment = 1, tooltip = '', options = {})
    if increment == ''
        - var increment = 1

    .spinner-group
        if tooltip
            if options['order']
                a.lq-link.lq-link__arrow Especifica tu pedido
            .toolnumber(data-measure=options['weighttype'])
                p.lq-peso.toolnumber__lq-peso(data-value=options['weight'])=options['weight']+ ' '+options['weighttype']
                span.lq-icon-arrow-large-right
                p.lq-precio.toolnumber__lq-precio(data-value=options['price'])='S/'+options['price']
        else
            .toolnumber-empty
        .lq-spinner
            button.lq-btn__left
                span.lq-btn__text -
            input(type="number" value=value data-min=min data-max=max data-increment=increment)
            button.lq-btn__right.lq-color-active
                span.lq-btn__text +

mixin lq-card(name, resume, brand, price, image, options = {})
    .lq-card

        if options['promotext']
            - var promotext = options['promotext']
            - var display = 'lq-card__promo--visible'
        else
            - var display = 'lq-card__promo'
            - var promotext = ''

        if options['promocolor']
            - var promocolor = options['promocolor']
            - var display = 'lq-card__promo--visible'
        else
            - var promocolor = '#213AF8'

        if options['spinnerinc']
            - var increment = options['spinnerinc']
        else
            - var increment = 1

        div(class='lq-card__promo' + ' ' + display style='background-color:' + promocolor)=promotext

        .lq-card__imagearea
            if image
                a.lq-card__photo(href="#" title=name style="background-image: url("+image+")") &nbsp;

            if options['warning']
                .lq-card__warning
                    | tomar bebidas alcohólicas en exceso es dañino

        .lq-card__info
            // info
            a.lq-card__name(href="" title=name)= name
            p.lq-card__resume=resume
            p.lq-card__brand=brand
            if options['tooltip']
                p.lq-card__extra Precio x kg

            // prices
            .lq-card__prices
                if options['discount-value']
                    p.lq-card__price='S/'+price
                p.lq-card__discount
                    sub S/
                    if options['discount-value']
                        span.lq-card__discount-value=options['discount-value']
                    else
                        span.lq-card__discount-value=price
                    if options['discount-percent']
                        span.lq-card__discount-percent=options['discount-percent']
                if options['oh-value']
                    p.lq-card__oh
                        sub S/
                        span.lq-card__oh-value=options['oh-value']
                        span.lq-card__oh-percent=options['oh-percent']
                    p.lq-card__exclusive
                        span.lq-icon-tarjeta-oh
                        | Dcto. exclusivo
        .lq-card__fixedbottom
            // quantity
            +lq-spinner('1', '10', '1', increment, options['tooltip'], { 'weight': options['weight'], 'price': options['price'], 'weighttype': options['weighttype'], 'order': true })

            // actions
            .lq-card__actions
                .lq-card__actions-save
                    a.lq-link.lq-link__add-to-list Guardar en lista
                .lq-card__actions-add
                    button.lq-button.lq-card__addcart
                        span Agregar

        .lq-card__message
            p.lq-card__message-text &nbsp;

