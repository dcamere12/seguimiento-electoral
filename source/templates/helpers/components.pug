mixin lq-switch(name, a, b)
    .lq-switch
        div.lq-switch-active
            input(type="radio" name=name value=a checked)
            span=a
        div
            input(type="radio" name=name value=b)
            span=b

mixin lq-checkbox(name, value = '', label = '', options = {checked: false, disabled: false, extra: '', datakey: ''})
    label.lq-checkbox(data-key=(options['datakey']) ? options.datakey : '')
        input(type='checkbox', id=id, name=name, value=value, checked=options.checked, disabled=options.disabled)
        span=label
            if (options.extra)
                em='(' + options.extra +')'
        .check

mixin lq-radio(name, value = '', label = '', options = {checked: false, disabled: false, extra: ''})
    label.lq-radio
        input.lq-radio__input(type="radio", name=name, value=value, checked=options.checked, disabled=options.disabled)
        span=label
            if (options.extra)
                em='(' + options.extra +')'
        .check

